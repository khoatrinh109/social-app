<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_margin="5dp" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintBottom_toBottomOf="@id/textMessage"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/imageReceive"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <TextView
        app:layout_constraintWidth_max="wrap"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintStart_toEndOf="@id/imageReceive"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:background="@drawable/background_receive"
        android:id="@+id/textMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/white"
        android:textSize="8dp"
        app:layout_constraintTop_toBottomOf="@id/textMessage"
        app:layout_constraintStart_toStartOf="@id/textMessage"
        android:layout_marginTop="4dp"
        android:id="@+id/textDateTime"
        android:layout_width="0dp"
        android:gravity="right"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>